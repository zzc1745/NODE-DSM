<div class="two-box">
    <form class="register-box">
        <p class="register-box-name">注册</p>
        <div class="form-group">
            <label>编号:
                <input type="text" class="input-control" id="register-number">
            </label>
        </div>
        <div class="form-group">
            <label>姓名:
                <input type="text" class="input-control" id="register-name">
            </label>
        </div>
        <div class="form-group">
            <label>密码:
                <input type="password" class="input-control" id="register-pwd">
            </label>
        </div>
        <div id="register-identity">
            <label>身份:
                <label><input type="radio" name="identity" value="student"> 学生 </label>
                <label><input type="radio" name="identity" value="teacher"> 教师 </label>
            </label>
        </div>
        <p id="register-note">&nbsp;</p>
        <button type="submit" class="btn btn-primary" id="registerBtn">注册</button>
    </form>
    <form class="login-box" action="" method="post">
        <p class="login-box-name">登录</p>
        <div class="form-group">
            <label>编号:
                <input type="text" class="input-control" id="login-number">
            </label>
        </div>
        <div class="form-group">
            <label>密码:
                <input type="password" class="input-control" id="login-pwd">
            </label>
        </div>
        <div id="login-identity">
            <label>身份:
                <label><input type="radio" name="identity" value="student"> 学生 </label>
                <label><input type="radio" name="identity" value="teacher"> 教师 </label>
            </label>
        </div>
        <p id="login-note">&nbsp;</p>
        <button type="submit" class="btn btn-primary" id="loginBtn">登录</button>
    </form>
</div>


<script src="/public/test/login.js"></script>
<script src="/public/test/register.js"></script>

