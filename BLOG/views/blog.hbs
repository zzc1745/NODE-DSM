<div class="blog-container container-fluid">
    <div class="header row">
        <a href="/blog"><span class="header-title">FOODPORN</span></a>
        <ul class="user-bar col-md-3">
            <li class="col-md-2">
                <i class="fa fa-envelope"></i>
            </li>
            <li class="col-md-10 user-welcome">
                <a href="#">欢迎foodporn</a>
            </li>
            <div class="user-info">
                <div class="user-image">
                    <img src="/images/22.jpg">
                    <p>foodporn</p>
                </div>
                <div class="user-buttons">
                    <a href="/admin/news" class="btn btn-default btn-flat" id="profile">profile</a>
                    <a href="" class="btn btn-default btn-flat" id="sign-out">sign out</a>
                    <div class="clear-both"></div>
                </div>
            </div>
        </ul>
    </div>
    <div class="navi">
        <ul class="navi-bar">
            <li>C语言</li>
            <li>C++</li>
            <li>HTML</li>
            <li>文学</li>
            <li>语言</li>
        </ul>
    </div>
    <div class="blogs-and-pages">
    {{#each entries}}
        <!--each表示对同一集合中的所有元素做同一异步操作-->
        <div class="blog-content">
            <div class="blog-title">
                <a><h4>{{title}}</h4></a>
                <span class="blog-date">创建于{{formatDate meta.createAt}}</span>
                <span class="blog-update">更新于{{formatDate meta.updateAt}}</span>
            </div>
            <div class="blog-text">
                <!--//content需要转码,否则出现<p>content</p>,所以需要三个大括号-->
                <p>{{content}}</p>
            </div>
        </div>
    {{/each}}
    <!--<div class="pagination"></div>-->
    <!--&lt;!&ndash;<ul id="page-box" class="pagination pagination-lg"></ul>&ndash;&gt;我的原始分页-->
    <div class="page-box">
        <nav>
            <ul class="pagination">
                <li>
                    <a href="{{#le pageNumber 1}}?page={{reduce pageNumber 1}}{{/le}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {{#times pageCount 1 pageCount}}
                    <!--循环pageCount次,从1开始到pageCount-->
                    <li {{#equals pageNumber this.step}}class="active" {{/equals}}>
                            <a href="?page={{step}}{{#if recommend}}&recommend={{recommend}}{{/if}}{{#if type}}&type={{type}}{{/if}}">{{step}}</a>
                        <!--如果recommend和type值非空,才会在url中出现这一段新增字符串&recommend=  &type=  -->
                    </li>
                {{/times}}
                <li>
                    <a href="{{#ge pageNumber pageCount}}?page={{reduce pageNumber 1}}{{/ge}}" aria-label="after">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>    
    <div class="clear-both"></div>
    </div>
    <div class="clear-both"></div>
</div>

<script src="/blog/profile.js"></script>
